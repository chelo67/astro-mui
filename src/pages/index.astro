<style>
    /* estilos generales */
   * {
       margin: 0;
       padding: 0;
       box-sizing: border-box;
   }
   body {
      
   }
   /* contenedor */
    .contenedor {
        margin: 0 auto;
       max-width: 800px;
       height: 100%;
       display: flex;
       flex-direction: column;
       align-items: center;
    }
    /* cabecera */
    .cabecera {
        width: 100%;
        height: 120px;
        display: flex;
        flex-direction: column;
        align-items: center;
        background-image: url('img/bg_encabezado.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        border-radius: 10px 10px 0 0;
        margin-top: 8px;
        margin-inline: 5px;

    }
    .perfil {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100px;
        width: 90%;
        transform: translateY(100%);
    }
    .perfil .foto {
        width: 30%;
        height: 100px;
    }
    .perfil .foto img {
        width: 100px;
        border-radius: 50%;
        border: 6px solid white;
    }
    .perfil .nombre {
        width: 70%;
        height: 100px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    .perfil .nombre h2 {
        font-family: 'Lobster', cursive;
        font-size: 1.4rem;
        color:#484848;
        margin-top: 30px;
    }
    .perfil .nombre h6 {
        font-family: 'Poppins', sans-serif;
        font-size: 0.8rem;
        color:#484848;
    }
/* contacto */
    .contacto {
        width: 100%;
        margin-top: 100px;
        display: flex;
        align-items: center;
        justify-content: space-evenly;   
    }
    .contacto-item {
        width: 50px;
        height: 50px;
        background-color: #484848;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .contacto-item a {
        color: white;
        text-decoration: none;
    }
    .contacto_info {
        width: 100%;
        margin-top: 30px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        gap: 15px;
    }
    .contact_info_item span {
        font-family: 'Poppins', sans-serif;
        margin-left: 4px;
    }
</style>